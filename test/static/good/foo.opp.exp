%start exp
%token <int> INT
%token PLUS
%token TIMES
%left PLUS
%left TIMES
%type <int> exp
%%

exp:
  lhs = exp _2 = TIMES rhs = exp
    {(
let op =                   ( fun x y -> x * y ) in
                                    ( op lhs rhs )
)}
| lhs = exp _2 = PLUS rhs = exp
    {(
let op =                  ( fun x y -> x + y ) in
                                    ( op lhs rhs )
)}
| x = INT
    {(
                     ( x )
)}

%%
