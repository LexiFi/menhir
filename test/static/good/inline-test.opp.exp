%start prog
%token EOF
%token <int> INT
%token PLUS
%token TIMES
%left PLUS
%left TIMES
%type <int> prog
%%

prog:
  x = exp _2 = EOF
    {                ( x )}

exp:
  x = INT
    {                     ( x )}
| lhs = exp _1 = PLUS rhs = exp
    {let op =                  ( fun x y -> x + y ) in
                                    ( op lhs rhs )}
| lhs = exp _1 = TIMES rhs = exp
    {let op =                   ( fun x y -> x * y ) in
                                    ( op lhs rhs )}

%%
