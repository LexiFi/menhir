%start expr
%token INT
%token MINUS
%token PLUS
%type <unit> expr
%%

expr:
  _1 = PLUS _2 = PLUS _3 = expr _4 = INT
    {                     ()}
| _1 = INT
    {                     ()}
| _1 = plus
    {                     ()}
| _1 = indir _2 = MINUS _3 = indir
    {                     ()}

indir:
  _1 = plus
    {            ( )}

plus:
  _1 = expr _2 = PLUS _3 = expr
    {                      ( )}

%%
