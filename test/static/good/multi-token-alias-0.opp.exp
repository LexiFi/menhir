%start phrase
%token DIV
%token EOL
%token <int> INT
%token LPAREN
%token MINUS
%token MUL
%token PLUS
%token RPAREN
%type <unit> phrase
%%

atom:
  _1 = LPAREN _2 = term _3 = RPAREN
    {    ( _2 )}
| _1 = INT
    {    ( _1 )}

factor:
  _1 = factor _2 = MUL _3 = atom
    {    ( _1 * _3 )}
| _1 = factor _2 = DIV _3 = atom
    {    ( _1 / _3 )}
| _1 = atom
    {    ( _1 )}

term:
  _1 = term _2 = PLUS _3 = factor
    {    ( _1 + _3 )}
| _1 = term _2 = MINUS _3 = factor
    {    ( _1 - _3 )}
| _1 = factor
    {    ( _1 )}

phrase:
  _1 = term _2 = EOL
    {    ( print_endline _1 )}

%%
