%start expression
%token ELSE
%token FALSE
%token IF
%token THEN
%token TRUE
%type <bool> expression
%%

expression:
  _1 = TRUE
    {    ( true )}
| _1 = FALSE
    {    ( false )}
| _1 = IF b = expression _3 = THEN e = expression
    {    ( if b then e else false )}
| _1 = IF b = expression _3 = THEN e1 = expression _5 = ELSE e2 = expression
    {    ( if b then e1 else e2 )}

%%
